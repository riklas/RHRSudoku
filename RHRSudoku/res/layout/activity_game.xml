<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.rhrsodoku"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlayout"
	>

    <com.example.rhrsudoku.SmallBox
        android:layout_width="100dp"
    	android:layout_height="100dp"
        android:id="@+id/smallbox1"
        android:text='1'
        android:onClick="setIsSelected"
        android:layout_centerHorizontal="true"
	/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smallbox1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:textSize="10sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="2"
            android:textSize="10sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="3"
            android:textSize="10sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="4"
            android:textSize="10sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="5"
            android:textSize="10sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="6"
            android:textSize="10sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="7"
            android:textSize="10sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="8"
            android:textSize="10sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="9"
            android:textSize="10sp" />
    </LinearLayout>
    
</RelativeLayout>