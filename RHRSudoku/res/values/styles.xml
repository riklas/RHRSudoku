<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="numpadButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:onClick">digitButtonClicked</item>
        <item name="android:background">#5555FF</item>       
    </style>
    
     <style name="diffButton" >
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/diff_button_back</item>      
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
     <style name="functionButton">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:layout_weight">1</item>
         <item name="android:layout_gravity">center</item>
         <item name="android:background">@drawable/func_button_background</item>
         <item name="android:gravity">center</item>
         <item name="android:textSize">25sp</item>
         <item name="android:padding">12dp</item>        
         <item name="android:textAlignment">center</item>
     </style>
     <style name="gridLayoutFrame">
         <item name="android:onClick">blankAreaClicked</item>
     </style>
    
</resources>